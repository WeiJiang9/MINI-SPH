.right-content {
  height: calc(100vh - 90rpx);
}
.goods-title{
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  color: #ccc;
}
.title{
  color: #444;
  padding: 0 10rpx;
}
.goods-list{
  display: flex;
  flex-wrap: wrap;
}
.goods-item{
  width: 33.33%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
  font-size: 25rpx;
  color: #444;
}
.goods-image{
  width: 50%;
}