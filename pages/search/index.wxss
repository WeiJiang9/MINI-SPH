page {
  background-color: #dedede;
  padding: 20rpx;
}

.search-row {
  height: 70rpx;
  display: flex;
  margin-bottom: 20rpx;
}

.search-row input {
  flex: 1;
  height: 100%;
  background-color: #fff;
  padding-left: 20rpx;
  border-radius: 6rpx;
}


.search-row button {
  margin-left: 20rpx;
  height: 100%;
  font-size: 26rpx !important;
  font-weight: 0 !important;
  color: #333;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.search-item {
  font-size: 26rpx;
  padding: 20rpx 10rpx;
  background-color: #fff;
  margin-bottom: 2px;
  border-radius: 5rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}