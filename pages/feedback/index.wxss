page {
  background-color: #eee;
}

.fb-main {
  padding: 20rpx;
}


.fb-tips {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 10rpx;
  justify-content: space-between;
}

.tips-item {
  padding: 10rpx 0;
  border: 1rpx solid #ccc;
  width: 30%;
  background-color: #fff;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.fb-content {
  background-color: #fff;
}

.fb-content textarea {
  width: 98%;
  padding: 10rpx;
}

.fb-tool {
  padding: 20rpx;
  display: flex;
  flex-wrap: wrap;
}

.fb-tool button {
  width: 80rpx !important;
  height: 80rpx !important;
  color: #bbb;
  background-color: #eee;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin: 0 !important;
}

.from-btn-wrap {
  position: relative;
  padding-left: 70%;
  margin-top: 10rpx;
}

.from-btn-wrap icon {
  position: absolute;
  right: 150rpx;
  top: 50%;
  transform: translateY(-50%);
  z-index: 10;
}

.from-btn-wrap button {
  background-color: #fa5151 !important;
  color: #fff !important;
  width: 200rpx !important;
  height: 70rpx !important;
  margin: 0 !important;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}