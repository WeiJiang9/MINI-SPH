page {
  padding-bottom: 100rpx;
}

.swiper {
  height: 65vw;
  text-align: center;
}

.swiper-image {
  width: 70%;
}

.goods-price {
  color: var(--themeColor);
  font-size: 34rpx;
  font-weight: 600;
  padding: 15rpx;
}

.goods-name-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  font-size: 30rpx;
}

.goods-name {
  flex: 4;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.goods-collect {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-left: 1px solid #eee;
}

.icon-shoucang1 {
  font-size: 40rpx;
}

.goods-info-title {
  padding: 25rpx;
  border-top: 6px solid #eee;
  border-bottom: 6px solid #eee;
  color: red;
  font-size: 32rpx;
  font-weight: 600;
}

.btm-tool {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  background-color: #fff;
  height: 100rpx;
}

.tool-left {
  flex: 4;
  display: flex;
  font-size: 24rpx;
  border-top: 1px solid #eee;
}

.iconfont {
  font-size: 36rpx;
  margin-bottom: 10rpx;
}

.tool-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}

.tool-item button {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.tool-right {
  flex: 5;
  display: flex;
  color: #fff;
}

.tool-cart {
  background-color: #ffa500;
}

.tool-shop {
  background-color: #eb4450;
}

.icon-shoucang {
  color: var(--themeColor);
}