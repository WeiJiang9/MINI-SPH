.goods-item {
  display: flex;
  border-bottom: 1px solid #ccc;
  padding: 10rpx 0;
  max-height: 232rpx;
}

.goods-img {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}

.goods-img image {
  width: 70%;
}

.goods-info {
  flex: 3;
  font-size: 32rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.goods-name{
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 28rpx;
}
.goods-price {
  color: var(--themeColor)
}